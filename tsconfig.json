{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom.iterable",
      "esnext",
      "dom",
      "es2015",
    ],
    "downlevelIteration": true, // Permet l'it√©ration sur des collections ES6+ dans des cibles plus anciennes
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
